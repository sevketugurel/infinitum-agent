# Docker Environment Configuration for Enhanced Logging (Development)
# Copy this to .env and update with your actual values

# Core Configuration
ENVIRONMENT=development
PORT=8080

# GCP Configuration - Update with your values
GCP_PROJECT_ID=your-project-id
FIREBASE_PROJECT_ID=your-project-id
GOOGLE_CLOUD_PROJECT=your-project-id

# API Keys - Set these with your actual values
GEMINI_API_KEY=your-gemini-api-key
GOOGLE_API_KEY=your-google-api-key
SERPAPI_API_KEY=your-serpapi-key

# Gemini Model Configuration
GEMINI_MODEL=gemini-2.5-flash

# Enhanced Logging Configuration (Development)
LOG_LEVEL=DEBUG
LOG_FILE_PATH=/app/logs/application.log
ENABLE_STRUCTURED_LOGGING=false
ENABLE_RICH_LOGGING=true
LOG_SAMPLING_RATE=1.0

# Monitoring and Observability (Development)
# SENTRY_DSN=https://your-sentry-dsn-here  # Uncomment and set for error tracking
ENABLE_METRICS=true
METRICS_PORT=9090
ENABLE_TRACING=false

# Performance and Debug Settings (Development)
ENABLE_PERFORMANCE_LOGGING=true
LOG_SLOW_OPERATIONS=true
SLOW_OPERATION_THRESHOLD=0.5
ENABLE_DEBUG_LOGGING=true